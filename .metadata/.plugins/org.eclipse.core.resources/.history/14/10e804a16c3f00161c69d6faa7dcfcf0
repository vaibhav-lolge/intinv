package com.inventory.dao;

import java.util.List;

import javax.sql.DataSource;

import org.springframework.jdbc.core.JdbcTemplate;

import com.inventory.mapper.UserMapper;
import com.inventory.model.User;

public class UserDAO implements IUserDAO{
	
	@SuppressWarnings("unused")
	private DataSource dataSource;
	

	private JdbcTemplate jdbcTemplate;
	

	@Override
	public void save(User user) {		
		
	}

	@Override
	public User getUser(String identifier) {
		String SQL="select * from users where identifier =?";
		User user= jdbcTemplate.queryForObject(SQL, new Object[]{identifier}, new UserMapper());
		
		
		return user;
	}

	@Override
	public List<User> getUsers(String name) {
		return null;
	}

	@Override
	public void update(User user) {
		// TODO Auto-generated method stub
		
	}
	
	public void setDataSource(DataSource dataSource) {
		this.dataSource = dataSource;
		this.jdbcTemplate = new JdbcTemplate(dataSource);
	}

	public boolean saveUser(User user) {
		String SQL = "insert into users (name, password, identifier) values (?,?,?)";
		int returnValue = jdbcTemplate.update(SQL, user.getName(), user.getPassword(), user.getIdentifier());
		if(returnValue > 0)
			return true;
		else
			return false;
	}

}
